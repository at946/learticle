<section class="section">
  <div class="container">
    <%= render "tab" %>
    <%= render "add_article_form", article: @article if params[:type] == "reading_later" %>
    
    <p class="has-text-right">
      <%= params[:type] == "finish_reading" ? "読了記事数" : "あとで読む記事数"  %>：<span class="is-size-3 has-text-primary has-text-weight-bold"><%= @articles.count %></span>
    </p>

    <div id="article_cards" class="columns is-multiline">
      <% @articles.each do |article| %>
        <div class="column is-half-tablet is-one-third-desktop">
          <%= render "article_card", article: article, memo_visible: true %>
        </div>
      <% end %>
    </div>
  </div>
</section>